@page
@model NETCSHARP_FRONTEND.Pages.RegisterModel
@{
}


<body style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);min-height: 100vh;display: flex;align-items: center;justify-content: center;padding: 20px;}">
    <div class="card">
        <h1 class="title">Registrasi ke RentCar</h1>

        <form id="registrationForm">
            <div class="form-group">
                <label class="label" for="nama">Nama Lengkap</label>
                <input type="text"
                       id="nama"
                       class="input"
                       placeholder="Masukkan nama lengkap Anda"
                       required>
            </div>

            <div class="form-group">
                <label class="label" for="email">Email</label>
                <input type="email"
                       id="email"
                       class="input"
                       placeholder="Masukkan email Anda"
                       required>
            </div>

            <div class="form-group">
                <label class="label" for="password">Password</label>
                <input type="password"
                       id="password"
                       class="input"
                       placeholder="Masukkan password Anda"
                       required>
            </div>

            <div class="form-group">
                <label class="label" for="repassword">Re-Password</label>
                <input type="password"
                       id="repassword"
                       class="input"
                       placeholder="Masukkan kembali password Anda"
                       required>
            </div>

            <div class="form-group">
                <label class="label" for="phone">Nomor Telefon</label>
                <input type="tel"
                       id="phone"
                       class="input"
                       placeholder="Masukkan nomor telefon Anda"
                       required>
            </div>

            <div class="form-group">
                <label class="label" for="address">Alamat</label>
                <input type="text"
                       id="address"
                       class="input"
                       placeholder="Masukkan alamat Anda"
                       required>
            </div>
            <div class="form-group">
                <label class="label" for="address">Driver License</label>
                <input type="text"
                       id="license"
                       class="input"
                       placeholder="Masukkan Drive License"
                       required>
            </div>

            <button type="submit" class="btn btn-primary">Registrasi</button>
        </form>

        <div class="text-center">
            <span style="color: #6b5b8e; font-size: 14px;">Sudah punya akun? </span>
            <a href="#" class="link">Login disini</a>
        </div>
    </div>
</body>
<script>
    // Attach submit handler after DOM is ready
    (function () {
        const form = document.getElementById('registrationForm');

        form.addEventListener('submit', async function (e) {
            e.preventDefault();

            // Get values from inputs
            const name = document.getElementById('nama').value.trim();
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const repassword = document.getElementById('repassword').value;
            const phoneNumber = document.getElementById('phone').value.trim();
            const address = document.getElementById('address').value.trim();
            const driverLicense = document.getElementById('license').value.trim();
            if (!name || !email || !password || !repassword || !phoneNumber || !address) {
                alert('Semua field wajib diisi.');
                return;
            }

            if (password !== repassword) {
                alert('Password dan Re-Password tidak sama.');
                return;
            }

            const payload = {
                email: email,
                password: password,
                name: name,
                phoneNumber: phoneNumber,
                address: address,
                driverlicense: driverLicense

            };

            try {
                const jwt = new JWTManager();
                const result = await jwt.register(payload);

                console.log('register result', result);
                if(result.status == 'invalid'){
                    alert(result.message)
                }
                else {
                    alert("Akun berhasil dibuat, anda sekarang dapat login!")
                }
              
            } catch (err) {
                console.error(err);
                alert('Terjadi kesalahan saat registrasi');
            }
        });
    })();
</script>